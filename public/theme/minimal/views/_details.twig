<article class="snippet-details record-{{ record.contenttype.slug  }}">
    <h1>{{ record.title }}</h1>

    {{ record.teaser }}

    {% if record.image!="" %}
        <a href="{{ image(record.image) }}">
            <img src="{{ thumbnail(record.image, 740, 560) }}">
        </a>
    {% endif %}

    {{ record.body }}


    {# If there are repeaters, we should output them. #}
    {% for module in record.modules %}
        {{ include('partials/_default_module.twig', { 'module': module }) }}
    {% endfor %}

    {{ fields(common = false, extended = false, repeaters = false) }}

    {{ include('partials/_record_footer.twig', { 'record': record, 'extended': true }) }}

    {{ dump(record) }}
</article>
