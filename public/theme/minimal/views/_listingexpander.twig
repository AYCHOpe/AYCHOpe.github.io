<article class="snippet-listing-expander record-{{ record.contenttype.slug  }}">
    <h2><a href="{{ record.link }}">{{ record.title }}</a></h2>

    {% include('partials/_image_snippet.twig') with { record: record, width: 700, height: 435 } %}

    {# display something introduction-like.. #}
    {% if record.introduction %}
        {{ record.introduction }}
    {% elseif record.teaser %}
        {{ record.teaser }}
    {% else %}
        <p>{{ record.excerpt(300, false, search|default('')) }}</p>
    {% endif %}

    {% include 'partials/_record_footer.twig' with { 'record': record } %}
</article>
