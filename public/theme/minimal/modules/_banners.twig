{#
Available variables
    'module':    the full module object
    'title':     title of the module
    'body':      body of the module
    'records':   array of (selected) records that belong to the module
#}

{% for record in records %}
    {% if record.id is defined %}
        <a class="banner third" href="{{ record.htmllink|default(record.link)|default('#') }}">
            {% if record.image is not empty %}
            <div class="colored-image"
                 style="background-image: url({{ image(record.image, 1800, 400)|default('https://unsplash.it/1800/400') }})"></div>
            {% else %}
                <div class="colored-image"
                     style="background-image: url('https://unsplash.it/1800/400')"></div>
            {% endif %}
            <div class="header-group">
                <h3 class="widget">{{ record.title }}</h3>
                {% if record.intro %}
                    {{ record.intro }}
                {% elseif record.teaser %}
                    {{ record.teaser }}
                {% else %}
                    <p>{{ record.excerpt(300, false, search|default('')) }}</p>
                {% endif %}
            </div>
        </a>
    {% endif %}
{% endfor %}
