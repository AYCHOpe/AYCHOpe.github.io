{# EVENT MAP #}

<figure class="event-figure">

    <div class="add-calendar-wrapper">
        {% include 'partials/_add-to-calendar.twig'%}
    </div>

    <div class="map">

        {# HERE BE MAP #}
        {% if record.geolocation is not empty %}
        <img width="640" class="static-map" src="https://maps.googleapis.com/maps/api/staticmap?center={{ record.geolocation.latitude }},{{ record.geolocation.longitude - 0.15}}&zoom=11&scale=2&size=640x400&maptype=roadmap&format=png&visual_refresh=true&markers=size:mid%7Ccolor:0xff0000%7Clabel:%7C{{ record.geolocation.address }}" alt="Google Map of {{ record.geolocation.address }}">

        {% else %}
            <img width="640" class="static-map" src="https://maps.googleapis.com/maps/api/staticmap?center=MÃ¼nchen&zoom=4&scale=2&size=640x400&maptype=roadmap&format=png&visual_refresh=true" alt="Google Map of Europa">
        {% endif %}


        <div class="img-container">
            <img class="event-img" src="{{ record.image|default('notfound')|thumbnail(700, 510, 'c') }}" alt="{{ record.title }}" />

            <div class="info-block">
                {% include 'partials/_event-datetime.twig' %}

                {% if record.location_name is not empty %}
                <span class="event-location">
                    <svg class="icon icon-location">
                        <use xlink:href="#icon-location"></use>
                    </svg>
                    {{ record.location_name }}
                </span>
                {% endif %}

            </div>
        </div>

    </div>

    {% if record.values.image.title is defined %}
    <figcaption>
        {{ record.values.image.title }}
    </figcaption>
    {% endif %}

</figure>