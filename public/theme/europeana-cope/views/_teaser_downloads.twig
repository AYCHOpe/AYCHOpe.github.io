<article class="teaser teaser-download group">
    <div class="img-container">
        <img src="{{ item.image|default('notfound')|thumbnail(600,400,'c')}}" alt="{{ record.title }}"/>

        <div class="info-block">
           <span class="info-date">Created: {{ record.datepublish|localedatetime("%A %B %e, %Y") }}</span>

            {% if item.contact_record %}
            <span class="info-author">
                {% setcontent author = 'persons' where { id : item.contact_record } returnsingle %}
                By <a href="{{ author.link() }}">{{ author.first_name }} {{ author.last_name }}</a>
            </span>
            {% endif %}

            <a class="info-action">
                <svg class="icon icon-calendar">
                    <use xlink:href="#icon-calendar"></use>
                </svg>Download
            </a>
        </div>

    </div>

    <h2><a href="{{ item.link() }}">{{ item.title }}</a></h2>

    {% include 'partials/_tags.twig' %}

    {% if item.teaser %}
        {{ item.teaser }}
    {% elseif item.intro %}
        {{ item.intro }}
    {% else %}
        <p>{{ item.excerpt(150, false, search|default('')) }}</p>
    {% endif %}

    <div class="actions-footer">

       {% include 'partials/_readtime.twig' %}
       <a class="readmore">
            Call to action
        </a>

    </div>

</article>