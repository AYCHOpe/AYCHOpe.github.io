<header id="header" class="">
    <div class="mainlogo">
        <h1>
            <a href="/">
            <img src="{{ asset( 'images/splash_tenyears/logo_10thanniversary.svg','theme') }}" alt="Europeana - 10th anniversary" />
            </a>
        </h1>
    </div>

    <nav>
        <ul>
            <li><a href="">10 Perspectives</a></li>
            <li><a href="">10 Heritage Specialists</a></li>
        </ul>
    </nav>
    
    <a class="button outline" href="/">Learn More on Pro</a>
</header>

{% set personids = [] %}
{% set persons = [] %}

{# Set persons for wheel #}
{% for feature in record.modules %}
    {# {{feature.selected_persons}} #}
    {% set personids = feature.selected_persons|json_decode() %}
    {# {{ dump(personids) }} #}

    {% for personid in personids %}
        {% setcontent person = 'persons' where { id : personid } %}
        {% set persons = persons|merge([person]) %}
    {% endfor %}
{% endfor %}

{# {{ dump(persons) }} #}


<main>
    <section class="wheel-section group">
        <h2 class="sr-only">Explore our specialists</h2>
        <div class="wheel">
            <div class="center">
                <span class="mainnumber">10</span>
                <p class="slogan">Perspectives on<br /> digital transformation<br /> with culture</p>
            </div>

            {% for person in persons %}

            <article class="article-{{loop.index}}">
                <svg viewBox="0 0 167 260" width="167" height="260" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                    <defs>
                        <clipPath id="mask">
                        <polygon points="0,0 167,0 83,260" />
                        </clipPath>
                    </defs>
                    <image xlink:href="http://placekitten.com/180/280" clip-path="url(#mask)" width="180" height="280"></image>
                </svg>

                <h2 class="number">{{loop.index}}</h2>
                <p>{# TODO #}Lorem ipsum dolor sit amet, consectetur adipiscing elit. Non est igitur voluptas bonum. </p>
                <div class="thumblink-fourcol thumblink-persons">
                    <a href="{{ person.link() }}">
                        {# TODO: default kittens weghalen#}
                        <img class="round" src="{{ person.image|thumbnail(250,250,'c')|default('http://placekitten.com/250/250') }}" alt="{{ person.first_name }} {{ person.last_name }}"/>
                    </a>
                    <h3>{{ person.first_name }} {{ person.last_name }}</h3>
                    <p class="function">{{ person.job_title }}</p>
                    <p class="company">{{ person.country }}</p>
                </div>

            </article>
            {% endfor %}
            
        </div>{# /wheel #}
        
    </section>

    <section class="heritage-specialists group module">
        <div class="inner-wrap">
            <h2>Our International Heritage Specialists</h2>
            <div class="items-container">

                {% for person in persons %}
                {# {{ dump(person)}} #}
                <article class="column fifth thumblink-fivecol thumblink-persons">
                    <a href="{{ person.link() }}">
                        {# TODO: default kittens weghalen#}
                        <img class="round" src="{{ person.image|thumbnail(250,250,'c')|default('http://placekitten.com/250/250') }}" alt="{{ person.first_name }} {{ person.last_name }}"/>
                    </a>
                    <h3>{{ person.first_name }} {{ person.last_name }}</h3>
                    <p class="function">{{ person.job_title }}</p>
                    <p class="country">{{ person.country }}</p>
                </article>

                {% endfor %}

            </div>
        </div>
    </section>

    {# TODO Include / inline alternative footer #}
    {{ include('partials/_footer_splashpage.twig') }}

</main>

