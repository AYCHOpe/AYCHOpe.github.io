{% set personids = [] %}
{% set persons = [] %}

{# Set persons for wheel #}
{% for feature in record.modules %}
    {# {{feature.selected_persons}} #}
    {% set personids = feature.selected_persons|json_decode() %}
    {# {{ dump(personids) }} #}

    {% for personid in personids %}
        {% setcontent person = 'persons' where { id : personid } %}
        {% set persons = persons|merge([person]) %}
    {% endfor %}
{% endfor %}

{# {{ dump(persons) }} #}
{# {{ dump(personinfo.373.color) }}  #}

<main>
    <section class="wheel-section group" id="perspectives">
        <h2 class="sr-only">Explore our specialists</h2>
        <div class="wheel-container">
            <div class="wheel">
                <div class="center">
                    <p class="gates">The gates are open</p>
                    <p class="mainnumber"><span>10<span></p>
                    <p class="slogan">visions of the future<br /> of digital culture</p>
                </div>

                {# {% for person in persons %} #}
                {% for person in personinfo %}
                    {# {% set personstyle = personinfo[person.id] %} #}

                <article class="article-{{loop.index}}"
                    data-bgcolor="{{ person.color }}"> 
                    <div class="handle handle-{{loop.index}}">
                            <img src="{{ person.image }}"></img>
                        </svg>
                    </div>

                    <div class="center">
                        <h2 class="mainnumber" style="color: {{ person.color }}"><span>{{ person.number}}</span></h2>

                        <p class="statement">{{ person.title|raw }}</p>
                        <div class="thumblink-fourcol thumblink-persons">
                            <a href="#">
                                <img class="round" src="{{ person.portrait }}" alt="{{ person.name }}"/>
                            </a>
                            <h3>{{ person.name }}</h3>
                            <p class="function">{{ person.function }}</p>
                            {# <p class="country">{{ person.country }}</p> #}
                        </div>
                    </div>

                </article>
                {% endfor %}
                
            </div>{# /wheel #}
        </div>
    </section>

    <section class="heritage-specialists group module" id="heritage-specialists">
        <div class="inner-wrap">
            <h2>Our International Heritage Specialists</h2>
            <div class="items-container">

                {% set orderedpersons = [7,4,9,10,5,6,2,3,1,8] %}
                {% for orderid in orderedpersons %}
                
                {% set person = personinfo[orderid] %}
                <article class="column fifth thumblink-fivecol thumblink-persons">
                    <a href="#">
                        <img class="round" src="{{ person.portrait }}" alt="{{ person.name }}"/>
                    </a>
                    <h3>{{ person.name }}</h3>
                    <p class="function">{{ person.function }}</p>
                    {# <p class="country">{{ person.country }}</p> #}
                </article>

                {% endfor %}

            </div>
        </div>
    </section>

