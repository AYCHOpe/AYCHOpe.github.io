<article class="column half teaser-twocol group record-{{ record.contenttype.slug  }}">
    <div class="img-container">
        <img src="{{ image(record.image, 600, 600) }}" alt="{{ record.title }}"/>
        <p class="img-insert">
        Created: <span class="date">{{ record.datepublish|localedatetime("%A %B %e, %Y") }}</span>
        </p>
    </div>
    <h3><a href="{{ record.link }}">{{ record.title }}</a></h3>
    <p class="meta">Created: <span class="date">{{ record.datepublish|localedatetime("%A %B %e, %Y") }}</span></p>
    <div class="label">Networking</div>
    {% if record.teaser %}
        {{ record.teaser }}
    {% elseif record.intro %}
        {{ record.intro }}
    {% else %}
        <p>{{ record.excerpt(300, false, search|default('')) }}</p>
    {% endif %}
    <a href="{{ record.link }}" class="readmore">Read more</a>
</article>
