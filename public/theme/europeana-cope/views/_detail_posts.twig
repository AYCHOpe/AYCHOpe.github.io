
    <section>
        <div class="inner-wrap">

            <article class="column main-column">

                {% include 'partials/_side-info.twig' %}

                {% include 'partials/_header-group.twig' %}



                {% if record.image is defined and record.image is not empty %}
                <figure {% if record.author|length > 1 %}class="non-wide"{% endif %}>
                    <img class="main-img" src="{{ record.image|thumbnail(1240, 600, 'c') }}" alt="" />

                    {% if record.values.image.title is defined %}
                        <figcaption>
                            {{ record.values.image.title }}
                        </figcaption>
                    {% endif %}

                </figure>
                {% endif %}

                {% if record.body is not empty %}
                    <div class="body"> {# can be multiple bodies #}
                        {{ record.body }}
                    </div>
                {% endif %}

            </article>

        </div>
    </section>

    {% for module in record.modules %}
        {{ include('partials/_default_module.twig', { 'module': module }) }}
    {% endfor %}

    {% if record.attachments is defined and record.attachments is not empty %}
        {{ include('partials/_download-content.twig') }}
    {% endif %}

    {% if record.pagefooter is defined and record.pagefooter is not empty %}
    <section>
        <div class="inner-wrap">
            <article class="column main-column">
                <div class="body pagefooter">
                    {{ record.pagefooter }}
                </div>
            </article>
        </div>
    </section>
    {% endif %}

    <aside>
        <div class="inner-wrap">

        {# AUTHOR BIG #}
        {% if record.contact_name is not empty %}
        {% include 'views/_teaser_externalcontact.twig' %}

        {% elseif record.author is not empty %}

            {% for aut in record.author %}
            {% setcontent author = 'persons' where { id : aut } returnsingle %}

            {% include 'views/_teaser_author.twig' with { item : author } %}

            {% endfor %}
        {% endif %}


        {# RELATED CONTENT #}
       {% include 'modules/_related_posts.twig' with { record : record, title : 'Related' } %}

    </aside>
