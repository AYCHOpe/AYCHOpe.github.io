{% if record.image is not empty %}

<div class="calltoaction colored-image {{ layoutclass }}"

    {% if layoutclass == "half" %}
    style="background-image: url({{ image(record.image, 800, 400)|default(notfound) }})"
    {% else %}
    style="background-image: url({{ image(record.image, 1600, 350)|default(notfound) }})"
    {% endif %}
>

{% else %}

<div class="calltoaction colored-image {{ layoutclass }}"
    style="background-image: url('/theme/europeana-cope/images/default.png')">

{% endif %}

    <div class="header-group">
        <h3 class="widget">{{ record.title }}</h3>
        {% if record.teaser %}
            {{ record.teaser }}
        {% elseif record.intro %}
            {{ record.intro }}
        {% elseif record.body %}
            {{ record.body }}
        {% else %}
            {# for breakers we do not want an excerpt unless really necessary #}
            <p>{{ record.excerpt(300, false, search|default('')) }}</p>
        {% endif %}

        <a class="button-link" href="{{ record.htmllink|default(record.link)|default('#') }}">
            Learn more
        </a>
    </div>

</div>

