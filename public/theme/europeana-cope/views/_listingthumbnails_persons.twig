{% if item is not defined %}
    {% set item = record %}
{% endif %}

<div class="column fourth thumblink-fourcol thumblink-persons">
    <a href="{{ item.link() }}">
    {% if item.values.image is defined and item.values.image is not empty and item.values.image.file|default() != "" %}
        <img class="round" src="{{ item.values.image|thumbnail(250,250,'c')}}" alt="{{ item.first_name }} {{ item.last_name }}"/>
    {% else %}
        <img class="round" src="{{ 'web_assets/default.png'|thumbnail(250,250,'c')}}" alt="{{ item.first_name }} {{ item.last_name }}"/>
    {% endif %}
    </a>

    <h3>{{ item.first_name }} {{ item.last_name }}</h3>

    {% if item.company %}
    <p class="company">
        {{ item.company }}
    </p>
    {% endif %}

    {% if item.gb_role is not empty %}
    <span title="Governing Board Role: {{ item.gb_role }}">{{ item.gb_role }}</span>
    {% endif %}
    {% if item.na_role is not empty %}
    <span title="Network Association role / Europeana Foundation team: {{ item.na_role }}">{{ item.na_role }}</span>
    {% endif %}
    {% if item.na_community_role is not empty %}
    <span title="Network Association Community role: {{ item.na_community_role }}">{{ item.na_community_role }}</span>
    {% endif %}

    {% if item.job_title %}
    <p class="function">
        {{ item.job_title }}
    </p>
    {% endif %}


</div>
