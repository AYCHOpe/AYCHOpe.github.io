{% if record is not empty %}
{# This file is inserted as the 'primary call to action' of each listed record. #}
<div class="calltoactioninline">
    <div class="column">
        <a class="button" href="{{ record.htmllink|default(record.link)|default('#') }}">{{ record.buttontext|default('Learn more') }}</a>
    </div>
</div>
{% else %}
    <!-- called calltoactioninline without a record -->
{% endif %}
