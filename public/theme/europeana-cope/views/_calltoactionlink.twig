{% if record is not empty %}
{# Section breakers - Call to action LINK #}
<div class="calltoactionlink">
    {% if record.image is defined and record.image is not empty %}
        <div class="colored-image" style="background-image: url({{ image(record.image, 900, 90)|default('notfound') }})"></div>
    {% else %}
        <div class="colored-image"
             style="background-image: url({{ image('web_assets/default.png', 900, 90)}}"></div>
    {% endif %}

    <h3 class="widget">{{ record.title|default('') }}</h3>
    {# <hr> #}
    <a href="{{ record.htmllink|default(record.link|default(''))|default('#') }}" class="button actionbutton">
        {{ record.buttontext|default('Learn more') }}
    </a>
</div>
{% else %}
    <!-- called calltoactionlink without a record -->
{% endif %}
