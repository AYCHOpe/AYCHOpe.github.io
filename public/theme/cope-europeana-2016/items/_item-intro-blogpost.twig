<div class="item-supplementary">
    <div class="item-image">
        <a href="{{ item.link() }}">
            {% if item.teaser_image %}
                <img src="{{ thumbnail(item.teaser_image, 400, 300) }}" title="{{ item.teaser_image|title }}">
            {% endif %}
        </a>
    </div>
</div><!--

             --><div class="item-details">

    <h2 class="title">
        <a href="{{ item.link() }}">{{ item.title|default('Placeholder title') }}</a>
    </h2>


    <div class="item-meta-primary">

        {% setcontent authors = 'persons' where { id: item.author|join(' || ') } %}
        {% include 'items/_item-author.twig' with { record: authors } %}

        {% include 'items/_item-readtime.twig' with { record: item } %}

    </div>

    <div class="item-meta-secondary">

        {% include 'items/_item-date.twig' with { record: item } %}

        {% include 'items/_item-tags.twig' with { record: item } %}

        {% include 'items/_item-comments-link.twig' with { record: item } %}

    </div>

    <div class="item-preview">
        {{ item.teaser|default('Placeholder teaser') }}
    </div>

</div>
