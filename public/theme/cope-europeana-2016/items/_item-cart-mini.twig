<div class="cart">
    <ul class="cart-list">

        <li class="cart-item cf">
            <div class="cart-item-details">
                <a class="cart-item-name" href="#">Dit is een test item</a>

                <ul class="cart-item-attributes">

                    <li>
                    Hier staat meer info of zo
                    </li>

                </ul>

            </div>

            <div class="cart-details-quantity">
                <input class="cart-item-quantity"
                       data-cart-idx="0"
                       name="quantity_{{ id|default('') }}"
                       type="text"
                       pattern="[0-9]*"
                       value="{{ quantity|default('') }}"
                       autocomplete="off">
            </div>

            <div class="cart-details-price">
                <span class="cart-price">€200</span>
            </div>

            <div class="cart-details-remove">
                <button type="button" class="cart-remove">×</button>
            </div>

        </li>

    </ul>

    <div class="cart-footer">
        <a href="TODO: checkout url here" class="cart-btn-checkout btn-small btn pill alt">Pay now</a>
    </div>

</div>
