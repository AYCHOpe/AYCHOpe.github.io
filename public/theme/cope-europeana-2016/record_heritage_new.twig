{% extends '_base_page.twig' %}

{% if is_member() %}
    {% set member = member() %}
    {% set member_meta = member_meta() %}
{% endif %}

{% block bodyclass %} page_entry_submit {% endblock %}

{% block main %}
{% if is_member() %}
<!-- Start content -->
<div class="l-content">

    <div class="page_header">

        {% include 'items/_item-breadcrumb.twig' %}

    </div>
    {# use the current user from the members extension #}
    {% set currentuser = { 'id': member.guid|default(1), 'name': member.displayname|default('Rick'), 'email': member.email|default('rick@browsercheck.nl') } %}

    {% setcontent currentedition = 'himeditions' where {
        'submission_deadline': '>= today',
        'status': 'published',
        'submission_closed': '!1' } orderby 'submission_start' returnsingle %}

    <div id="entry-detail" class="entry-detail">
        <div class="section">

        {% if not currentedition %}
            <h2>› Your New Project</h2>
            {# record.intro #}
            <p>Sorry, it is not possible to enter the competition at the moment. There are no editions open for entry</p>
            
        {% else %}
            
            <h2><span class="inabox">{{ currentedition.title }}</span> › Your New Project</h2>
            {# record.intro #}
            
            {{ boltforms('heritagenew', defaults={
                'userid': currentuser.id,
                'status': 'draft',
                'name': currentuser.name,
                'email': currentuser.email
            }) }}

        {% endif %}
        
            {{ record.body }}
            
        </div>
    </div>

</div>
{# END l-content #}

<div class="l-sidebar">
    {%  include 'items/_item-profile-mini.twig' with { currentuser: currentuser, member: member|default(), member_meta: member_meta|default() } %}
</div>
{# end sidebar #}

<!-- End Content -->
{% else %}
    <div class="l-content">
        <div class="page_header">
            {% include 'items/_item-breadcrumb.twig' %}
        </div>

        <div id="entry-detail" class="entry-detail">
            <p>You need to <a href="/authentication/login">sign in</a> for this.</p>
        </div>
    </div>
    <div class="l-sidebar">
    </div>
{% endif %}
{% endblock %}
